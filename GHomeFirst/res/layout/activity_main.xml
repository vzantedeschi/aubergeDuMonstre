<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/intrus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intrus"
        android:layout_centerHorizontal="true" />
    
    <TextView
        android:id="@+id/ask_eat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask_eat"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/intrus" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ask_eat"
        android:layout_centerHorizontal="true" >
        
	    <Button 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/oui"
	        android:onClick="bonApp"
	        style="?android:attr/buttonBarButtonStyle" />
	    
	    <Button
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/non"
	        android:onClick="nettoyage"
	        style="?android:attr/buttonBarButtonStyle" />
	</LinearLayout>


</RelativeLayout>
